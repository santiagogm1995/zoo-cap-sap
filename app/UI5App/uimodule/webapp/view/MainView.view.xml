<mvc:View controllerName="com.myorg.myUI5App.controller.MainView" displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl">
    <pages>
      <Page title="{i18n>title}">
        <content>
          <Panel headerText="Upper center">
            <FlexBox height="100px" alignItems="Start" justifyContent="Center">
              <Button text="Animal CRUD" type="Emphasized" class="sapUiSmallMarginEnd" press="goToPadCRUD" />
              <Button text="All function examples" type="Emphasized" class="sapUiSmallMarginEnd" press="goToPagFunctions" />
            </FlexBox>
          </Panel>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>